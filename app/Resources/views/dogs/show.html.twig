{% extends 'base.html.twig' %}

{% block body %}
    <h1>Dog</h1>

    <table>
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ dog.name }}</td>
            </tr>
            <tr>
                <th>Bdate</th>
                <td>{% if dog.bdate %}{{ dog.bdate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ dog.description }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ dog.photo }}</td>
            </tr>
            <tr>
                <th>Quality</th>
                <td>{{ dog.quality }}</td>
            </tr>
            <tr>
                <th>Sex</th>
                <td>{{ dog.sex }}</td>
            </tr>
            <tr>
                <th>Iddogs</th>
                <td>{{ dog.idDogs }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('dogs_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('dogs_edit', { 'id': dog.idDogs }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
