{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{'titles.list.titles'|trans}}</h1>

    <table>
        <thead>
            <tr>
                <th>{{'titles.list.title'|trans}}</th>
                <th>On English</th>
                <th>{{'total.action'|trans}}</th>
            </tr>
        </thead>
        <tbody>
        {% for title in titles %}
            <tr>
                <td><a href="{{ path('titles_show', { 'idTitles': title.idTitles }) }}">{{ title.title }}</a></td>
                <td>{{ title.titleEng }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('titles_show', { 'idTitles': title.idTitles }) }}">{{'total.show'|trans}}</a>
                        </li>
                        <li>
                            <a href="{{ path('titles_edit', { 'idTitles': title.idTitles }) }}">{{'total.edit'|trans}}</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('titles_new') }}">{{'total.create'|trans}}</a>
        </li>
    </ul>
{% endblock %}
