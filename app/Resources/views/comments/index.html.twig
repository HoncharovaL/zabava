{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{'comments.list.questserv'|trans}}</h1>

    <table>
        <thead>
            <tr>
                <th>{{'comments.list.name'|trans}}</th>
                <th>{{'nursery.list.phone'|trans}}</th>
                <th>{{'nursery.list.email'|trans}}</th>
                <th>{{'total.questions'|trans}}</th>
                <th>{{'services.list.services'|trans}}</th>
            </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            <tr>
                <td>{{ comment.klname }}</td>
                <td>{{ comment.phone }}</td>
                <td>{{ comment.email }}</td>
                <td>{{ comment.question }}</td>
                <td>{{ comment.services}}</td>
                <td>
                    <ul>
                         {#  {% if is_granted('IS_AUTHENTICATED_FULLY') %}#}
                         <a href="{{ path('delete_route_name', {'id': comment.idComments }) }}">{{'total.delete'|trans}}</a>
                         {# {% endif %}#}
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
<h1>{{'comments.list.questdogs'|trans}}</h1>

    <table>
        <thead>
            <tr>
                <th>{{'comments.list.name'|trans}}</th>
                <th>{{'nursery.list.phone'|trans}}</th>
                <th>{{'nursery.list.email'|trans}}</th>
                <th>{{'total.questions'|trans}}</th>
                <th>{{'dogs.list.namedog'|trans}}</th>
            </tr>
        </thead>
        <tbody>
        {% for comment in commentsdogs %}
            <tr>
                <td>{{ comment.klname }}</td>
                <td>{{ comment.phone }}</td>
                <td>{{ comment.email }}</td>
                <td>{{ comment.question }}</td>
                <td>{{ comment.name}}</td>
                 <td>
                    <ul>
                         {#  {% if is_granted('IS_AUTHENTICATED_FULLY') %}#}
                        <li>
                            <a href="{{ path('comments_edit', { 'idComments': comment.idComments }) }}">{{'total.edit'|trans}}</a>
                        </li>
                           {# {% endif %}#}
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
